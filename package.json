{
  "name": "luster-ai",
  "version": "1.0.0",
  "description": "Real Estate Photo Enhancement Platform",
  "scripts": {
    "dev": "concurrently \"npm run dev:db\" \"npm run dev:api\" \"npm run dev:worker\" \"npm run dev:web\"",
    "dev:db": "cd infra && docker-compose up -d",
    "dev:api": "cd services/api && python -m uvicorn main:app --reload --host 0.0.0.0 --port 8000",
    "dev:worker": "cd services/worker && python worker.py",
    "dev:web": "cd apps/web && npm run dev",
    "setup": "npm run setup:api && npm run setup:worker && npm run setup:web",
    "setup:api": "cd services/api && pip install -r requirements.txt",
    "setup:worker": "cd services/worker && pip install -r requirements.txt",
    "setup:web": "cd apps/web && npm install",
    "build": "cd apps/web && npm run build",
    "stop": "cd infra && docker-compose down"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}